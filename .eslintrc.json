{
  "extends": [
    "react-app",
    "react-app/jest",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "plugins": [
    "react",
    "react-hooks"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "react/prop-types": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react/react-in-jsx-scope": "off",
    "max-len": ["warn", { 
      "code": 120, 
      "ignoreComments": true,
      "ignoreUrls": true 
    }],
    "indent": ["warn", 2],
    "quotes": ["warn", "single"],
    "semi": ["warn", "always"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
